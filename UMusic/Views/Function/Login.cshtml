@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HLayout.cshtml";
}
<div style="background: url(/Content/background/bg_index_new.jpg);">
    <div class="container">
        <div class="row">
            <div class="login_panel center-block">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <span class="glyphicon glyphicon-pencil"> 欢迎登陆UMusic</span>
                        </h3>
                    </div>
                    <div class="panel-body">
                        <p>&nbsp;</p>
                        <div class="alert alert-danger fade in @ViewBag.warning">
                            <a href="#" class="close" data-dismiss="alert">
                                &times;
                            </a>
                            <strong>警告！</strong>登录失败，账号或密码错误，请重新登录
                        </div>
                        <form class="form-horizontal" method="post" action="/Function/Login" name="Login">
                            <div class="form-group">
                                <label class="col-md-2 control-label">账&nbsp;&nbsp;户</label>
                                <div class="col-md-10">
                                    <input type="text" name="login_username" class="form-control" id="login_username">
                                    <img src="~/imgs/loading2.gif" id="loading" class="hidden" />
                                    <p class="ok text-success hidden"><span class="glyphicon glyphicon-ok"></span></p>
                                    <p id="userloginInfo">&nbsp;</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">密&nbsp;&nbsp;码</label>
                                <div class="col-md-10">
                                    <input type="password" name="login_password" class="form-control" id="login_password">
                                    <p id="userpwdInfo">&nbsp;</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label"></label>
                                <div class="col-md-10">
                                    <input type="submit" name="login_submit" class="form-control btn btn-default" id="login_submit" value="登录">
                                    <p id="usersubmitInfo">&nbsp;</p>
                                </div>
                            </div>
                            <a href="/Function/foundPwd" id="forgetpwd" class="pull-right" target="_blank">&nbsp;忘记密码</a>
                            <a href="/Function/Regist" class="pull-left">没有账号，去注册</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .login_panel {
        margin-top: 100px;
        width: 600px;
        height: 800px;
    }
    #user_feedback {
        margin-left:50px;
    }
    #loading {
        position:absolute;
        z-index:9999;
        margin-left:420px;
    }
    .ok {
        position:absolute;
        margin-left:420px;
        margin-top:-25px;
    }
</style>
