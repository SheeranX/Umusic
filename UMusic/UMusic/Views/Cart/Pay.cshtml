@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_HLayout.cshtml";
}

<div class="container pay">
    <div class="row">
        <div class="panel">
            <div class="panel-body">
                <div class="col-md-6">
                    <dl>
                        <dt id="inputPWD">
                           订单号： <a id="payorderid"> @ViewBag.orderid</a>
                            <p>&nbsp;</p>
                            <form method="post" class="form-inline">
                                <div class="form-group">
                                    <label class="control-label">密&nbsp;码：</label>
                                    <input type="password" name="password" id="paypassword" placeholder="请输入密码" class="form-control" />
                                    <input type="button" name="submit" value="确认支付" class="btn btn-danger" id="submitPay"/>
                                </div>
                            </form>
                        </dt>
                        <dt>
                            <h1 class="text-success hidden" id="successInfo"><span class="glyphicon glyphicon-ok"></span> 付款成功</h1>
                        </dt>
                        <dd>&nbsp;</dd>
                        <dd>
                            <p>支付密码默认为您的登录密码，您也可以通过支付宝或微信付款</p>
                        </dd>
                        <dd>
                            <img src="~/imgs/logo/zhi.jpg" class="col-md-6"/>
                            <img src="~/imgs/logo/wei.jpg" class="col-md-6"/>
                        </dd>
                        <dd>&nbsp;</dd>
                        <dd class="uercenter hidden">
                            <p>&nbsp;</p>
                            <a href="/UserCenter/Index" class="btn btn-info  btn-block">去个人中心查看</a>
                        </dd>
                    </dl>

                </div>
                <div class="col-md-6">
                    <div class="thumbnail">
                        <img src="~/imgs/logo/gelaimei.jpg" />
                        <div class="caption">

                            <blockquote>
                                <p>
                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.
                                </p> <small>Someone famous <cite>Source Title</cite></small>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .pay {
        margin-top:50px;
    }
    .thumbnail {
        border: 0px;
        border-left: 1px solid #ccc;
    }

    dl {
        margin-top: 120px;
        margin-left: 50px;
    }
</style>