@{
    ViewBag.Title = "Regist";
    Layout = "~/Views/Shared/_HLayout.cshtml";
}

<div style="padding-bottom:30px">
    <div class="container">
        <div class="row">
            <div class="col-md-6 register">
                <form class="form-horizontal" method="post" action="/Function/RegisterUser" name="RegisterUser">    
                    <div class="form-group">
                        <!-- register username -->
                        <label class="col-md-2 control-label">账&nbsp;&nbsp;户</label>
                        <div class="col-md-10">
                            <input type="text" name="username" class="form-control" id="re_username" maxlength="20">
                            <img src="~/imgs/loading2.gif" id="loading" class="hidden" />
                            <p id="re_username_info">&nbsp;</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- register email -->
                        <label class="col-md-2 control-label">邮&nbsp;&nbsp;箱</label>
                        <div class="col-md-10">
                            <input type="text" name="email" class="form-control" id="re_email" maxlength="25">
                            <p id="re_eamil_info">&nbsp;</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <!-- register phone -->
                        <label class="col-md-2 control-label">手&nbsp;&nbsp;机</label>
                        <div class="col-md-10">
                            <input type="text" name="phone" class="form-control" id="re_phone" maxlength="12">
                            <p id="re_phone_info">&nbsp;</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <!-- register password -->
                        <label class="col-md-2 control-label">密&nbsp;&nbsp;码</label>
                        <div class="col-md-10">
                            <input type="password" name="password" class="form-control" id="re_pwd" maxlength="20">
                            <!-- THE PROGRESS BAR BEGIN -->
                            <div class="progress">
                                <div class="progress-bar progress-bar-danger" role="progressbar"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                                    <span class="sr-only">密码安全度低</span>
                                </div>
                                <div class="progress-bar progress-bar-warning" role="progressbar"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                                    <span class="sr-only">密码安全度中</span>
                                </div>
                                <div class="progress-bar progress-bar-success" role="progressbar"
                                     aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                                    <span class="sr-only">密码安全度高</span>
                                </div>
                            </div>
                            <!-- THE PROGRESS BAR END -->
                            <p id="re_pwd_info">&nbsp;</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">验证码</label>
                        <div class="col-md-10">
                            <input type="text" name="re_validation" class="form-control" id="re_validation" maxlength="4">
                            <canvas class="validateNum" id="canvas"></canvas>
                            <p id="validateNumInfo">&nbsp;</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input type="submit" name="re_submit" class="form-control btn btn-default" id="re_submit" value="同意协议并注册">
                            <p>&nbsp;</p>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6" id="left_info">
                <div class="thumbnail">
                    <img src="~/imgs/logo/bg_sq.png"/>
                    <div class="caption">
                        <h3>拥有UMusic ID 你可以享有以下服务</h3>
                        <p class="text">无损音质|邮件推送|在线客服</p>
                        <p class="text-info"><a href="/Function/Login">已有账号？去登录&nbsp;&nbsp;<span class="glyphicon glyphicon-hand-right"></span></a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    #left_info {
        /*border:1px solid #000;*/
        margin: 10% 0px 0px 5%;
        padding: 0px;
    }

        #left_info p {
            font-size: 16px;
        }

        #left_info .thumbnail {
            border: none;
            border-left: 1px solid #ccc;
            box-shadow: 2px;
        }
</style>
